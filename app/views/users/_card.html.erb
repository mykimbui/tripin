  <div class= "container">
  <div class="row">
    
    <% if member.team.end_date.to_date > Date.today %>
      <div class="col-xs-9 left-card text-left">
    <% else %>
      <div class="col-xs-9 left-card-outdate text-left">
    <% end %>
          <p><%= member.team.city.name.upcase %></p>
          <h2><%= member.team.title %></h2>

        <% if policy(member.team).show? %>

          <%= link_to "", team_path(member.team.id), class: "card-link" %>

        <% end %>
        <div class="avatar-link">
          <%= link_to user_path do %>
            <%= image_tag member.user.profile_picture, class: "avatar" %>
          <% end %>
        </div>
        <div class="team-score">
          <h2>100 <sup>PT</sup></h2>
        </div>
    </div>
    <% if member.team.end_date.to_date > Date.today %>
    <div class="col-xs-3 delete-card text-center">
    <% else %>
    <div class="col-xs-3 delete-card-outdate text-center">
    <% end %>
        <% if policy(member.team).destroy? %>
        <i class="fa fa-trash" aria-hidden="true"></i>

          <%= link_to "", team_path(member.team), method: :delete, class: "card-link" %>
        <% end %>
    </div>
  </div>
</div>
