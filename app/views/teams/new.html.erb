<header>
<div class="text-center">
  <nav>
    <a href="#city"><i class="fa fa-circle" aria-hidden="true"></i>
</a>
    <a href="#dates"><i class="fa fa-circle" aria-hidden="true"></i>
</a>
    <a href="#team"><i class="fa fa-circle" aria-hidden="true"></i>
</a>
  </nav>
  </div>
</header>
<div class="content">


  <div class="bigtext">
  <section id="city">
      <div class="bigcontainer">

        <h1>Where do you want to go?</h1>


        <div class="needspace styled-input">

          <%= simple_form_for @team do |f| %>

          <%= f.input :city_id, collection: City::CITIES, prompt: "Pick your city", label: false, input_html: { class: "disable-form-control" }  %>
        </div>
      </div>
    </section>
  <section id="dates">

    <div class="bigcontainer">

      <h1>Pick your dates</h1>
      <div class="needspace styled-input">

        <%= f.input :start_date, as: :date, placeholder: "Start date"%>
        <%= f.input :end_date, as: :date, placeholder: "End date"%>
      </div>
    </div>
        </section>
  <section id="team">

    <div class="bigcontainer">

      <h1>Create your team</h1>
      <div class="needspace">
        <%= f.input :title, placeholder: "Team name"%>
        <%= f.input :team_picture %>
        <%= f.input :team_picture_cache, as: :hidden %>

      </div>
      <div class="needspace">
        <div class="btn-medium text-center">
          <%= f.submit %></div></div>
          <% end %>
        </div>
        </section>

      </form>
    </div>
  </div>
</div>

