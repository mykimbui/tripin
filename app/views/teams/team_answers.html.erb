<div class="container text-center">
<div class="row">

<div class="col-xs-12">
<h1> YOUR ANSWERS </h1>

<% @team_answers.each do |team_answer| %>
<ul>
  <li>
    <%=team_answer.challenge.title%> - <%=team_answer.challenge.description%> -
    <% if  team_answer.text.nil? %>
      <%= cl_image_tag team_answer.picture, height: 300, width: 300, crop: :fill%>
    <% else %>
    <%=team_answer.text%>
    <% end %>
    - <%=team_answer.status%></li>
  </ul>

  <%= cl_image_tag team_answer.picture, height: 300, width: 300, crop: :fill%>

  <% end %>

  <%= link_to 'Go Back', team_path(@team) %>

</div>
</div>
</div>
