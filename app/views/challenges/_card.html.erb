<div class="card">
  <div class="card-category">
    <%= team_challenge.challenge.input_type %>
  </div>
  <div class="card-description">
    <h2><%= team_challenge.challenge.title %></h2>
  </div>
  <div class="bottom-right">
    <%= team_challenge.challenge.score %>
  </div>

  <% if !team_challenge.answer.nil? %>
    <div class="upper-right"><%#= team_challenge.answer.status %>
      <div>
        <% if team_challenge.answer.status == "completed" || team_challenge.challenge.gift == "" %>
          <i class="fa fa-check-circle"></i>
        <% elsif team_challenge.answer.status == "completed" || team_challenge.challenge.gift != "" %>
          <%= link_to "#myModal", "data-toggle" => "modal" do %>
            <p> <i class="fa fa-gift"></i><!--+link to promocode page  --></i></p>
          <% end %>
          <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Your promocode is : </h4>
                </div>
                <div class="modal-body">
                  <p>  <%= team_challenge.challenge.gift %>   </p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% else team_challenge.answer.status == "pending" %>
          <i class="fa fa-paper-plane"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= link_to "", team_challenge_path(@team.id, team_challenge.challenge.id), class: "card-link" %>
</div>



